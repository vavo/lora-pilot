#!/usr/bin/env bash
set -euo pipefail

cmd="${1:-}"
shift || true

case "$cmd" in
  comfy) exec /opt/pilot/comfy.sh "$@" ;;
  kohya) exec /opt/pilot/kohya.sh "$@" ;;
  jupyter) exec /opt/pilot/start-jupyter.sh "$@" ;;
  code) exec /opt/pilot/start-code-server.sh "$@" ;;
  *)
    echo "usage: pilot {comfy|kohya|jupyter|code} [args...]"
    exit 2
    ;;
esac
